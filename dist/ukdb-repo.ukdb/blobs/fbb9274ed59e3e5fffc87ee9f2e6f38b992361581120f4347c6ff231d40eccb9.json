{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UKDB Claim v0.1",
  "type": "object",
  "required": ["id", "subject", "predicate", "object"],
  "properties": {
    "id": { "type": "string" },
    "subject": { "type": "string" },
    "predicate": { "type": "string" },
    "object": {
      "type": "object",
      "required": ["type", "value"],
      "properties": {
        "type": { "type": "string" },
        "value": {}
      },
      "additionalProperties": true
    },
    "scope": {
      "type": "object",
      "additionalProperties": true
    },
    "status": { "type": "string" },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "supports": {
      "type": "array",
      "items": { "type": "string" }
    },
    "contradicts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "created_at": { "type": "string" }
  },
  "additionalProperties": true
}